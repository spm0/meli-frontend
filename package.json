{
  "name": "meli-frontend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build:server": "babel ./src -d build",
    "build:watch:server": "babel ./src -d build --watch",
    "build:client": "concurrently \"webpack --mode=production\" \"sass src/shared/assets/styles/global.scss:build/shared/assets/styles/global.css\"",
    "build:watch:client": "concurrently \"webpack --mode=development -w\" \"sass src/shared/assets/styles/global.scss:build/shared/assets/styles/global.css\"",
    "dev": "concurrently \"npm run build:watch:client\" \"npm run build:watch:server\" \"nodemon build/server/server.js\"",
    "start": "concurrently \"npm run build:client\" \"npm run build:server\" && nodemon build/server/server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "copy-webpack-plugin": "^11.0.0",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.5",
    "isomorphic-fetch": "^3.0.0",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^18.3.1",
    "react-helmet": "^6.1.0",
    "react-loader-spinner": "^5.4.5",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^9.2.1",
    "concurrently": "^8.2.2",
    "nodemon": "^2.0.22",
    "sass": "^1.90.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  }
}
